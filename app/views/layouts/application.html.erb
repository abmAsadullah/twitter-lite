<!DOCTYPE html>
<html>
  <head>
    <title>TwitterLite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="notification is-primary global-notification">
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>
    <% if flash[:alart] %>
      <div class="notification is-danger global-notification">
        <p class="alart"><%= alart %></p>
      </div>
    <% end %>
    <nav class="navbar is-info">
      <div class="navbar-brand">
        <%= link_to root_path, class: "navbar-item" do %>
          <h1 class="title is-5">Twitter Lite</h1>
        <% end %>
        <div class="nav-burger burger" data-target=navbarExample>
          <span></span>
          <span></span>
          <span></span>
        </div>
      </div>

      <div id="navbarExample" class="navbar-menu">
        <div class="navbar-end">
          <div class="field is-grouped">
            <p class="control">
              <%= link_to 'New Tweet', new_tweeet_path, class: "button is-info is-inverted" %>
            </p>
            <p class="control">Sign Up</p>
          </div>
        </div>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
